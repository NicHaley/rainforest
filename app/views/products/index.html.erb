<h1>Products</h1>
<p><%= link_to "Sign Up", new_user_url%></p>
<p><%= link_to "Add a Product", "/products/new" %></p><br>

<% @products.each do |product| %>
	<p><%= link_to "#{product.name}", "/products/#{product.id}" %> | Price: $<%= product.formatted_price %></p>
	<p><%= product.description %></p>
<% end %>